{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "standard",
    "plugin:prettier/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "camelcase":"off",
    "prettier/prettier":[
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "trailingComma": "all",
        "arrowParens": "avoid"
      }
    ]
  }
}
